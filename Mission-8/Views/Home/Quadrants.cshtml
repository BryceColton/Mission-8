@model List<TaskModel>

<div class="container">
    <h2 class="text-center">Task Quadrants</h2>

    <div class="row">
        <!-- Quadrant 1 (Important & Urgent) -->
        <div class="col-md-6">
            <h3>Quadrant 1 (Important & Urgent)</h3>
            <ul>
                @foreach (var task in Model.Where(task => task.Quadrant == "1"))
                {
                    <li>
                        @task.TaskName - Due: @task.DueDate
                        <a href="/Tasks/Edit/@task.TaskId">Edit</a> |
                        <a href="/Tasks/Delete/@task.TaskId">Delete</a>
                    </li>
                }
            </ul>
        </div>

        <!-- Quadrant 2 (Important & Not Urgent) -->
        <div class="col-md-6">
            <h3>Quadrant 2 (Important & Not Urgent)</h3>
