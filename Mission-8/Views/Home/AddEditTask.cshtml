@model Mission_8.Models.TaskModel

@{
    ViewData["Title"] = Model.TaskId == 0 ? "Add Task" : "Edit Task";
}

<h2>@ViewData["Title"]</h2>

<form asp-action="AddEditTask" method="post">
    <input type="hidden" asp-for="TaskId" />

    <div class="form-group">
        <label asp-for="TaskName"></label>
        <input asp-for="TaskName" class="form-control" required />
        <span class="text-danger" asp-validation-for="TaskName"></span>
    </div>

    <div class="form-group">
        <label asp-for="DueDate"></label>
        <input asp-for="DueDate" type="date" class="form-control" />
        <span class="text-danger" asp-validation-for="DueDate"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quadrant"></label>
        <select asp-for="Quadrant" class="form-control">
            <option value="1">Quadrant I - Important / Urgent</option>
            <option value="2">Quadrant II - Important / Not Urgent</option>
            <option value="3">Quadrant III - Not Important / Urgent</option>
            <option value="4">Quadrant IV - Not Important / Not Urgent</option>
        </select>
        <span class="text-danger" asp-validation-for="Quadrant"></span>
    </div>

    <div class="form-group">
        <label asp-for="CategoryId"></label>
        <select asp-for="CategoryId" asp-items="ViewBag.Categories" class="form-control"></select>
        <span class="text-danger" asp-validation-for="CategoryId"></span>
    </div>

    <div class="form-group form-check">
        <input class="form-check-input" type="checkbox" asp-for="Completed" />
        <label class="form-check-label" asp-for="Completed"> Mark as Completed</label>
    </div>

    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Quadrants" class="btn btn-secondary">Cancel</a>
</form>

@section Scripts {
        <partial name="_ValidationScriptsPartial" />
}
